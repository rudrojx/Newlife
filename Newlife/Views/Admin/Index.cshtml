@using Newlife.Models
@model DoctorDataViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!--**********************************
         Content body start
     ***********************************-->
<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-1">
                    <div class="card-body">
                        <h3 class="card-title text-white">Doctors</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.Doctotal</h2>                           
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-user-md"></i></span>
                    </div>
                </div>
            </div>
           
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-3">
                    <div class="card-body">
                        <h3 class="card-title text-white">New Customers</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.Usertotal</h2>
                            
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-4">
                    <div class="card-body">
                        <h3 class="card-title text-white">Customer Satisfaction</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.Reviewtotal %</h2>
                           
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-heart"></i></span>
                    </div>
                </div>
            </div>
        </div>



        <div class="row">

            @foreach (var item in Model.docdetails)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center">
                                <img src="~/@item.ProfilePicture" class="rounded-circle" alt="" width="80px">
                                <h5 class="mt-3 mb-1">@item.DoctorName</h5>
                                <p class="m-0">@item.Specialization</p>
                                <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                            </div>
                        </div>
                    </div>
                </div>         

            }

        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="active-member">
                            <div class="table-responsive">
                                <table class="table table-xs mb-0">
                                    <thead>
                                        <tr>
                                            <th>Customer ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Date of Birth</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.userDetails)
                                        {
                                            <tr>
                                                <td><img src="./images/avatar/1.jpg" class=" rounded-circle mr-3" alt="">@item.id</td>
                                                <td>@item.First_Name @item.Last_Name</td>
                                                <td>
                                                    <span>@item.Email</span>
                                                </td>
                                                <td>
                                                    <span>@item.Phone</span>
                                                </td>
                                                <td>@item.DateofBirth</td>
                                                <td>
                                                   <button class="btn btn-danger">Delete</button>
                                                </td>
                                            </tr>                                
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>







    </div>
</div>
<!-- #/ container -->
<!--**********************************
    Content body end
***********************************-->
