@model Newlife.Models.Clinic_Details
@{
    ViewBag.Title = "UpdateClinicDetails";
    Layout = "~/Views/Shared/DoctorLayout.cshtml";
}

<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="@Url.Action("Index", "Doctor")">Home</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" action="/Doctor/UpdateClinicDetails" method="post">

                                <input type="hidden" name="Id" value="@Model.Id" />
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        Clinic Name <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="docname" value="@Model.ClinicName" name="ClinicName" placeholder="Enter a name..">
                                    </div>
                                </div>

                               

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-email">
                                        Location <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-email" value="@Model.Location" name="Location" placeholder="Your Location..">
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-suggestions">
                                        Clinic Address <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <textarea class="form-control" id="val-suggestions" name="Clinic_Address" rows="4" placeholder="Tell about yourself..">@Model.Clinic_Address</textarea>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-suggestions">
                                        Timing & Day <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <textarea class="form-control" id="val-suggestions" name="Clinic_Timing"  placeholder="Ex: Mon 9:30 Am - 10:30 Am, Fri 11:00 Am - 2:00 PM" rows="4" >@Model.Clinic_Timing</textarea>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-currency">
                                        Clinic Fee <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-currency" value="@Model.ClinicFee" name="ClinicFee" placeholder="0.00">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-digits">
                                        Doctor Status <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select name="Doctor_Availability" class="form-control">
                                            @{
                                                if (Model.Doctor_Availability == "1")
                                                {
                                                    <option value="@Model.Doctor_Availability">Active</option>
                                                }
                                                else
                                                {
                                                    <option value="@Model.Doctor_Availability">Inactive</option>
                                                }
                                            }
                                            <option value="1">Active</option>
                                            <option value="0">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                                <hr />
                                <input type="hidden" value="@Model.DoctorName" name="DoctorName" />
                                <input type="hidden" value="@Model.DoctorID" name="DoctorID" />
                                <input type="hidden" value="@Model.DoctorSpeciality" name="DoctorSpeciality" />
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Update Form</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>

