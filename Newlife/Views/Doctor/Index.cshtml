@using Newlife.Models
@model DoctorDataViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/DoctorLayout.cshtml";
}

<!--**********************************
         Content body start
     ***********************************-->
<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">          
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-2">
                    <div class="card-body">
                        <h3 class="card-title text-white">Clinics</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.ClinicTotal</h2>
                            <p class="text-white mb-0">See more details</p>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-user-md"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-3">
                    <div class="card-body">
                        <h3 class="card-title text-white">Appointments</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.AppontimentTotal</h2>
                            <p class="text-white mb-0">See more details</p>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-4">
                    <div class="card-body">
                        <h3 class="card-title text-white">Customer Satisfaction</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.CustomerReview %</h2>
                            <p class="text-white mb-0">See more details</p>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-heart"></i></span>
                    </div>
                </div>
            </div>
        </div>



        <div class="row">
            @foreach (var item in Model.cliniclist)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center">
                                <img src="https://media.istockphoto.com/id/1225898954/vector/medical-clinic-building-simple-flat-illustration.jpg?s=1024x1024&w=is&k=20&c=xpTKzw7tToSaTP9kWo4mr56BnDNrOt1soNGVdUK-cnQ=" width="70px" class="rounded-circle" alt="">
                                <h5 class="mt-3 mb-1">@item.ClinicName</h5>
                                <p class="m-0">@item.Clinic_Address</p>
                                <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                            </div>
                        </div>
                    </div>
                </div>          
            }

        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4>Customer's Feedbacks</h4>
                        <div class="active-member">
                            <div class="table-responsive">
                                <table class="table table-xs mb-0">
                                    <thead>
                                        <tr>
                                            <th>Customer Name</th>
                                            <th>Health Cause</th>
                                            <th>Clinic</th>
                                            <th>Feedback</th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.reviewlists)
                                        {
                                            <tr>
                                                <td><img src="./images/avatar/1.jpg" class=" rounded-circle mr-3" alt="">@item.PatientName</td>
                                                <td>@item.Health_Cause</td>
                                                <td>
                                                    <span>@item.Clinic_Location</span>
                                                </td>                                           
                                                <td> @item.Doctor_Review</td>
                                           
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>







    </div>
</div>
<!-- #/ container -->
<!--**********************************
    Content body end
***********************************-->
